{% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="panel panel-info">
        <div class="panel-heading"><span class="glyphicon glyphicon-eye-open"></span> {{ 'Viewing log history'|trans }}</div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>{{ 'Version'|trans }}</th>
                            <th>{{ 'Action'|trans }}</th>
                            <th>{{ 'Logged at'|trans }}</th>
                            <th>{{ 'User'|trans }}</th>
                            <th>{{ 'Action'|trans }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in loggable %}
                            <tr>
                                <td>{{ item.version }}</td>
                                <td>{{ item.action }}</td>
                                <td>{{ item.loggedAt|localizeddate('long', 'medium') }}</td>
                                <td>{{ item.username }}</td>
                                <td>
                                    <button id="btn-log-details" type="button" class="btn btn-sm btn-default">
                                        <span class="btn-log-details">
                                            <span class="glyphicon glyphicon-eye-open"></span> {{ 'Open'|trans }}
                                        </span>
                                        <span class="btn-log-details hide">
                                            <span class="glyphicon glyphicon-eye-close"></span> {{ 'Close'|trans }}
                                        </span>
                                    </button>
                                </td>
                                <td>
                                    <div class="log hide">
                                        {{ dump(item.data) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}