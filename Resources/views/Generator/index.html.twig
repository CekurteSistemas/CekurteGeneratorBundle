{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Generator'|trans %}
{% set subtitle = 'List of the entities'|trans %}

{% block search -%}{% endblock %}

{% block links -%}{% endblock %}

{% block links_footer -%}{% endblock %}

{% block content -%}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{ 'Bundle'|trans }}</th>
                    <th>{{ 'Entity'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.bundle }}</td>
                    <td>{{ entity.entity }}</td>
                    <td>
                        <a href="{{ path('cekurte_generator_show', {'bundle': entity.bundle, 'entity': entity.entity}) }}" class="btn btn-sm btn-primary">
                            <span class="glyphicon glyphicon-cog"></span> {{ 'Setup CRUD' | trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
