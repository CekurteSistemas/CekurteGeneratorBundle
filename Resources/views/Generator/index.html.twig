{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Generator'|trans %}
{% set subtitle = 'List of the entities'|trans %}

{% block search -%}{% endblock %}

{% block links -%}{% endblock %}

{% block links_footer -%}{% endblock %}

{% block content -%}
    <div class="panel panel-default">
        <div class="panel-heading">{{ 'Database Tables'|trans }}</div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{{ 'Table'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in tables %}
                        <tr>
                            <td>{{ item }}</td>
                            <td>
                                <a href="{{ path('cekurte_generator_table_show', {'table': item}) }}" class="btn btn-sm btn-danger">
                                    <span class="glyphicon glyphicon-import"></span> {{ 'Import' | trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">{{ 'Object Relational Mapping'|trans }}</div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'Bundle'|trans }}</th>
                            <th>{{ 'Entity'|trans }}</th>
                            <th>{{ 'Actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in entities %}
                        <tr>
                            <td>{{ item.bundle }}</td>
                            <td>{{ item.entity }}</td>
                            <td>
                                <a href="{{ path('cekurte_generator_bundle_entity_show', {'bundle': item.bundle, 'entity': item.entity}) }}" class="btn btn-sm btn-primary">
                                    <span class="glyphicon glyphicon-cog"></span> {{ 'Setup CRUD' | trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
