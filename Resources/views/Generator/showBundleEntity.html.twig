{% extends 'CekurteGeneratorBundle:Generator:layout.html.twig' %}

{% set title    = 'Generator'|trans %}
{% set subtitle = 'Setup CRUD'|trans %}

{% block search -%}{% endblock %}

{% block links -%}
    <a href="{{ path('cekurte_generator') }}" class="btn btn-default">
        <span class="glyphicon glyphicon-list"></span> {{ 'List' | trans }}
    </a>
{% endblock %}

{% block links_footer -%}{% endblock %}

{% block content -%}
    <div class="table-responsive">
        <table class="table table-bordered table-show">
            <tbody>
                <tr>
                    <th>{{ 'Bundle'|trans }}</th>
                    <td>{{ bundle }}</td>
                </tr>
                <tr>
                    <th>{{ 'Entity'|trans }}</th>
                    <td>{{ entity }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">{{ 'Fields'|trans }}</div>
        <div class="panel-body">
            <table class="table table-hover table-show">
                <thead>
                    <tr>
                        <th>{{ 'Field Name'|trans }}</th>
                        <th>{{ 'Column Name'|trans }}</th>
                        <th>{{ 'Type'|trans }}</th>
                        <th>{{ 'Length'|trans }}</th>
                        <th>{{ 'Nullable'|trans }}</th>
                        <th>{{ 'Unique'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in fields %}
                        <tr>
                            <td>
                                {{ item.fieldName }}
                            </td>
                            <td>
                                {%- if item.id is defined -%}
                                    <span class="glyphicon glyphicon-lock"></span>
                                {%- endif %} {{ item.columnName }}
                            </td>
                            <td>
                                <span class="badge">{{ item.type }}</span>
                            </td>
                            <td>
                                {{ item.length is defined ? item.length : '' }}
                            </td>
                            <td>
                                {% include 'CekurteGeneratorBundle:Action:boolean-field.html.twig' with {
                                    'fieldValue': item.nullable is defined ? item.nullable : false
                                } %}
                            </td>
                            <td>
                                {% include 'CekurteGeneratorBundle:Action:boolean-field.html.twig' with {
                                    'fieldValue': item.unique is defined ? item.unique : false
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
