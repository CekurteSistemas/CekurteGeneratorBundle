{% extends 'form_div_layout.html.twig' %}

{% block form_row %}
    <div class="form-group">
        <div class="col-lg-2">
            {{ form_label(form) }}:
        </div>
        <div class="col-lg-10">
            {{ form_widget(form) }}
            <div class="errors">
                {{ form_errors(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block widget_attributes %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' form-control')|trim}) %}
    {{ parent() }}
{% endblock widget_attributes %}