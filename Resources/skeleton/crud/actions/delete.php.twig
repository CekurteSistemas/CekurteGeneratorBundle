
    /**
{% block phpdoc_method_header %}
     * Deletes a {{ entity }} entity.
{% endblock phpdoc_method_header %}
     *
{% block phpdoc_method_annotations %}
{% if 'annotation' == format %}
     * @Route("/{id}", name="{{ route_name_prefix }}_delete")
     * @Method("DELETE")
     * @Secure(roles="ROLE_{{ bundle | upper }}_{{ entity | upper }}_DELETE, ROLE_ADMIN")
{% endif %}
{% endblock phpdoc_method_annotations %}
     *
     * @param Request $request
     * @param int $id
     * @return RedirectResponse
{% include 'crud/actions/author.php.twig' %}
     */
{% block method_definition %}
    public function deleteAction(Request $request, $id)
{% endblock method_definition %}
    {
{% block method_body %}
        $handler = new {{ entity }}FormHandler(
            $this->createDeleteForm(),
            $request,
            $this->getDoctrine()->getManager(),
            $this->getContainer()->getFlashBag()
        );
{% endblock method_body %}

{% block method_return %}
        if ($handler->delete('{{ bundle }}:{{ entity }}')) {
            return $this->redirect($this->generateUrl('{{ route_name_prefix }}'));
        } else {
            return $this->redirect($this->generateUrl('{{ route_name_prefix }}_show', array('id' => $id)));
        }
{% endblock method_return %}
    }
